<script>
  const tag_btns = document.querySelectorAll('#tag_item')
  const section_contents = document.querySelectorAll('#section_contents')
	tag_btns.forEach((tag_btn_target) => {
		tag_btn_target.addEventListener('click', () => {
			tag_btns.forEach((tag_btn_all) => {
				tag_btn_all.classList.remove('active')
          section_contents.forEach((section_contents) => {
          section_contents.classList.add('dis-none')
          section_contents.classList.remove('dis-flex')
        })
			})
			tag_btn_target.classList.add('active')
		})
		tag_btn_target.addEventListener('mouseover', () => {
			tag_btn_target.classList.add('tag_item_mouseover')
			tag_btn_target.classList.remove('tag_item_mouseleave')
		})
		tag_btn_target.addEventListener('mouseleave', () => {
			tag_btn_target.classList.remove('tag_item_mouseover')
			tag_btn_target.classList.add('tag_item_mouseleave')
		})
	})
  tag_btns[0].addEventListener('click', () => {
    section_contents[0].classList.remove('dis-none')
    section_contents[0].classList.add('dis-flex')
  })
  tag_btns[1].addEventListener('click', () => {
    section_contents[1].classList.remove('dis-none')
    section_contents[1].classList.add('dis-flex')
  })
  tag_btns[2].addEventListener('click', () => {
    section_contents[2].classList.remove('dis-none')
    section_contents[2].classList.add('dis-flex')
  })

  document.addEventListener('DOMContentLoaded', () => {
		const progress_number = document.getElementById('progress_number')
		const progress_bar = document.querySelectorAll('#progress_bar')
		progress_bar.forEach((progress_bar) => {
			const bar_active_elem = progress_bar.querySelectorAll('#bar_active_elem')
			bar_active_elem.forEach((bar_active_elem) => {
				bar_active_elem.classList.add('elem_active')
			})
		})
	})
</script>

<script>
 import { GoogleGenerativeAI } from "@google/generative-ai";
import universityData from "../data/university_data.json";

const API_KEY = import.meta.env.PUBLIC_GEMINI_API_KEY;

// Google Generative AIのインスタンスを作成
const genAI = new GoogleGenerativeAI(API_KEY);
const model = genAI.getGenerativeModel({ model: "gemini-1.5-flash" });

// 会話履歴を保持する配列
const conversationHistory: { question: string; answer: string; }[] = [];

document.addEventListener("DOMContentLoaded", () => {
  const questionInput = document.getElementById("question");
  const submitButton = document.getElementById("submit");
  const chatList = document.querySelector(".chat_list");

  if (!questionInput || !submitButton || !chatList) {
    console.error("必要な要素が見つかりません");
    return;
  }

  // 質問送信時の処理
  submitButton.addEventListener("click", async () => {
    if (!(questionInput instanceof HTMLInputElement)) return;

    const userQuestion = questionInput.value.trim();
    if (!userQuestion) return;

    // ユーザーの質問をチャットリストに追加
    addChatItem(chatList, userQuestion, "user");

    // JSONデータからプロンプトを生成
    const fullPrompt = generatePrompt(userQuestion);

    try {
      // GeminiAPIから回答を取得
      const result = await model.generateContent(fullPrompt);
      const response = await result.response;
      const text = await response.text();

      // 応答を履歴に追加
      conversationHistory.push({ question: userQuestion, answer: text });

      // AIの回答をチャットリストに追加
      addChatItem(chatList, text, "bot");

      // 入力フィールドをリセット
      questionInput.value = "";
    } catch (error) {
      console.error("エラーが発生しました:", error);
      addChatItem(chatList, "エラーが発生しました。もう一度お試しください。", "error");
    }
  });
});

// プロンプトを生成する関数
function generatePrompt(userQuestion: string) {
  const universityContext = `
    大学名: ${universityData.university_name}
    ポータルURL: ${universityData.portal_url}
    問い合わせメール: ${universityData.contact_email}
    利用可能な機能: ${universityData.features.join(", ")}
    よくある質問: ${universityData.faq
      .map((faq) => `Q: ${faq.question}\nA: ${faq.answer}`)
      .join("\n")}
  `;

  const aiSetting = `
    役: ${universityData.role}
    口調: ${universityData.tone}
    回答する内容: ${universityData.range}
  `;

  const conversationContext = conversationHistory
    .map(
      (entry, index) =>
        `Q${index + 1}: ${entry.question}\nA${index + 1}: ${entry.answer}`
    )
    .join("\n");

  return `
    以下は大学ポータルサイトに関する情報です。この情報に基づいて、以下の質問に答えてください:
    情報:
    ${universityContext}
    ${aiSetting}

    過去の会話:
    ${conversationContext}

    質問: ${userQuestion}
    答え:
  `;
}

// チャット項目を追加する関数
function addChatItem(chatList: Element, text: string, type: string) {
  const chatItem = document.createElement("li");
  chatItem.className = `chat_item ${type}`;
  chatItem.innerHTML = `<p class="chat_text">${text}</p>`;
  chatList.appendChild(chatItem);

  // スクロールを最下部に移動
  chatList.scrollTop = chatList.scrollHeight;
}

</script>
